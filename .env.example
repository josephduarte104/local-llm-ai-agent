# Environment variables for Elevator Operations Agent
COSMOSDB_ENDPOINT=https://your-cosmosdb-account.documents.azure.com:443/
COSMOSDB_KEY=your-cosmosdb-key-here
COSMOSDB_DATABASE=elevatordb
COSMOSDB_CONTAINER=elevatorevents

# Local LLM Configuration (choose one)
# For Ollama
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# For LM Studio
# LLM_PROVIDER=lmstudio
# LMSTUDIO_BASE_URL=http://localhost:1234
# LMSTUDIO_MODEL=your-model-name

# Flask Application Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
SECRET_KEY=your-secret-key-change-this-in-production

# UI Configuration
APP_TITLE=Elevator Operations Agent
DEFAULT_TIMEZONE=UTC

# Performance Configuration
MAX_EVENTS_PER_QUERY=5000
QUERY_TIMEOUT_SECONDS=30
MEMORY_LIMIT_MB=512
DEBUG=false
